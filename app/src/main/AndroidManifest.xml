<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitshifter.wildfire" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseUserActivity"
            android:label="@string/title_activity_choose_user"
            android:parentActivityName=".SplashScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.SplashScreenActivity" />
        </activity>
        <activity
            android:name=".VictimActivity"
            android:label="@string/title_activity_victim"
            android:parentActivityName=".ChooseUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.ChooseUserActivity" />
        </activity>
        <activity
            android:name=".FamilyActivity"
            android:label="@string/title_activity_family"
            android:parentActivityName=".ChooseUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.ChooseUserActivity" />
        </activity>
        <activity
            android:name=".VolunteerActivity"
            android:label="@string/title_activity_volunteer"
            android:parentActivityName=".ChooseUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.ChooseUserActivity" />
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:label="@string/title_activity_web_view" >
        </activity>
        <activity
            android:name=".ProvideAssistanceActivity"
            android:label="@string/title_activity_provide_assistance"
            android:parentActivityName=".VolunteerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.VolunteerActivity" />
        </activity>
        <activity
            android:name=".CirculateMessageActivity"
            android:label="@string/title_activity_circulate_message"
            android:parentActivityName=".VolunteerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.VolunteerActivity" />
        </activity>
        <activity
            android:name=".JobActivity"
            android:label="@string/title_activity_job"
            android:parentActivityName=".VolunteerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.VolunteerActivity" />
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:parentActivityName=".ChooseUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitshifter.wildfire.ChooseUserActivity" />
        </activity>
    </application>

</manifest>
